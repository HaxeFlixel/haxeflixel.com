<!DOCTYPE html>
<html lang="en">

<%- @partial('head.html.eco', {title:@getPreparedTitle()}, {description:@getPreparedDescription()}, {keywords:@getPreparedKeywords()}, {author:@site.author or ''}, {styles:@getBlock("styles").add(["/styles/style.css"]).toHTML()} ) %>

<body>

<%- @partial('header-menu.html.eco', {ademos:"class='active'"}) %>

<div class="container container-main">

	<br>
	<br>

	<div id="demoSWF">
		<p><a href="http://www.adobe.com/go/getflashplayer"><img
				src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif"
				alt="Get Adobe Flash player"/></a></p>
	</div>

	<div class="container-main-content">
		<div class="demo-content">

			<br>
				
			<a href="https://github.com/HaxeFlixel/flixel-demos/tree/master/<%= @document.source %>/source" class="btn btn-sm btn-source" target="_blank"><span class="glyphicon glyphicon-book"></span> Source </a>

			<h1 class="title"><%= @document.title %></h1>

			<%- @content %>

			<hr>

			<ul class="pager">
				<% if @getPagerPrevious('demos'): %>
				<li class="previous">
					<a href="<%= @getPagerPrevious('demos').attributes.url %>" title="Previous"> <
						<img src="<%= @getThumbnail("/demos/images/#{@getPagerPrevious('demos').attributes.title}.png", "zoomcrop", { w: 70, h:70 }) %>" alt="Previous">
					</a>
				</li>
				<% end %>

				<% unless @getPagerPrevious('demos')?: %>
				<li class="previous">
					<a href="<%= @getLast('demos').attributes.url %>" title="Previous"> <
						<img src="<%= @getThumbnail("/demos/images/#{@getLast('demos').attributes.title}.png", "zoomcrop", { w: 70, h:70 }) %>" alt="Previous">
					</a>
				</li>
				<% end %>

				<% if @getPagerNext('demos'): %>
				<li class="next">
					<a href="<%= @getPagerNext('demos').attributes.url %>" title="Next">
						<img src="<%= @getThumbnail("/demos/images/#{@getPagerNext('demos').attributes.title}.png", "zoomcrop", {w: 70, h:70 }) %>" alt="Next">
						>
					</a>
				</li>
				<% end %>

				<% unless @getPagerNext('demos')?: %>
				<li class="next">
					<a href="<%= @getFirst('demos').attributes.url %>" title="Next">
						<img src="<%= @getThumbnail("/demos/images/#{@getFirst('demos').attributes.title}.png", "zoomcrop", { w:70, h:70 }) %>" alt="Next">
						>
					</a>
				</li>
				<% end %>
			</ul>

		</div>
	</div>

</div>

<%- @partial('footer.html') %>

<%- @getBlock('scripts').add(@site.scripts).toHTML() %>

<script type="text/javascript" src="/vendor/swfobject/swfobject/swfobject.js"></script>

<script type="text/javascript">
	var attributes = {wmode: "direct"};
	swfobject.embedSWF ("<%= "/demos/swf/#{ @document.title }.swf" %>", "demoSWF", "<%= @document.SWFWidth %>", "<%= @document.SWFHeight %>", "11.2.0", "/vendor/swfobject/swfobject/expressInstall.swf", null, null, attributes);
</script>

</body>
</html>
<header>
	<nav class="navbar navbar-expand-lg fixed-top">
		<div class="container-md">
			<div class="row gx-6">
				{% assign docs_page_info = page.url | split: '/' %}
				{% if docs_page_info[1] == 'documentation' and docs_page_info.length > 2 %}
					<a
						class="d-lg-none ms-2 fs-2 col"
						type="button"
						data-bs-toggle="offcanvas"
						data-bs-target="#doc-menu-offcanvas"
						aria-controls="doc-menu-offcanvas"
						><i class="bi-book d-inline-block align-text-top"></i
					></a>
				{% endif %}

				<a href="/" class="navbar-brand fs-3 fw-medium col">
					<img
						src="/images/haxeflixel.svg"
						height="31"
						alt="HaxeFlixel"
						class="align-text-bottom">
					HaxeFlixel
				</a>
			</div>

			<div class="row ms-2 me-2">
				<button
					class="navbar-toggler btn-outline-light col"
					type="button"
					data-bs-toggle="offcanvas"
					data-bs-target="#navbarNavDropdown"
					aria-expanded="false"
					aria-controls="navbarNavDropdown"
					aria-label="Toggle navigation">
					<span class="bi-list"></span>
				</button>
			</div>

			<div class="offcanvas offcanvas-end text-bg-dark" id="navbarNavDropdown">
				<div class="offcanvas-header">
					<h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">HaxeFlixel.com</h5>
					<button
						type="button"
						class="btn-close btn-close-white"
						data-bs-dismiss="offcanvas"
						aria-label="Close"></button>
				</div>
				<div class="offcanvas-body">
					<ul class="navbar-nav nav-underline d-flex flex-grow-1 align-items-lg-center">
						<li class="nav-item dropdown">
							<a
								href="#"
								class="nav-link dropdown-toggle {% dropdownActive 'demos' %}"
								data-bs-toggle="dropdown"
								role="button"
								aria-expanded="false"
								>Examples
								<span class="caret"></span>
							</a>
							<ul class="dropdown-menu inverse-dropdown">
								<li>
									<a class="dropdown-item" href="/demos">Demos</a>
								</li>
								<li>
									<a class="dropdown-item" href="https://snippets.haxeflixel.com/">
										<i class="bi bi-link-45deg"></i>
										Snippets
									</a>
								</li>
							</ul>
						</li>

						<li class="nav-item">
							<a class="nav-link {% dropdownActive 'showcase' %}" href="/showcase">Showcase</a>
						</li>

						{% comment %} <li <%= @ablog %>> {% endcomment %}
						<li class="nav-item">
							<a class="nav-link {% dropdownActive 'blog' %}" href="/blog">Blog</a>
						</li>

						{% comment %} <li <%= @adocs %>> {% endcomment %}
						<li class="nav-item">
							<a class="nav-link {% dropdownActive 'documentation' %}" href="/documentation"
								>Docs</a
							>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="http://api.haxeflixel.com">API</a>
						</li>

						{% comment %} <li <%= @aforum %>> {% endcomment %}
						<li class="nav-item">
							<a class="nav-link" href="https://github.com/HaxeFlixel/flixel/discussions">Forum </a>
						</li>
						<div class="nav-item me-4 h2 col d-inline-flex my-auto">
							<a
								class="nav-link ms-auto"
								href="https://github.com/HaxeFlixel/flixel"
								target="_blank">
								<i class="bi-github"></i>
							</a>
						</div>
					</ul>

					<div class="nav-item dropdown my-auto">
						<button
							class="btn btn-link nav-link px-0 px-lg-2 dropdown-toggle align-items-center"
							type="button"
							data-bs-toggle="dropdown"
							id="bd-theme">
							{% comment %} <svg class="bi theme-icon-active" width="32" height="32"><use href="#moon-stars-fill"></use></svg> {% endcomment %}
							<i class="bi-moon-stars-fill theme-icon-active"></i>
							<span class="d-lg-none" id="bd-theme-text">Toggle theme</span>
						</button>
						<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="bd-theme-text">
							<li>
								<button
									type="button"
									class="dropdown-item d-flex align-items-center"
									data-bs-theme-value="light"
									aria-pressed="false">
									<i class="bi-sun-fill me-2"></i>
									{% comment %} <svg class="bi me-2 opacity-50" width="32" height="32"><use href="icons/bootstrap-icons#sun-fill"></use></svg> {% endcomment %}
									Light
									{% comment %} <svg class="bi d-none" width="32" height="32"><use href="#check2"></use></svg> {% endcomment %}
								</button>
							</li>
							<li>
								<button
									type="button"
									class="dropdown-item d-flex align-items-center"
									data-bs-theme-value="dark"
									aria-pressed="false">
									<i class="bi-moon-stars-fill me-2"></i>

									{% comment %} <svg class="bi me-2 opacity-50" width="32" height="32"><use href="#moon-stars-fill"></use></svg> {% endcomment %}
									Dark
									{% comment %} <svg class="bi d-none"><use href="#check2"></use></svg> {% endcomment %}
								</button>
							</li>
							<li>
								<button
									type="button"
									class="dropdown-item d-flex align-items-center"
									data-bs-theme-value="auto"
									aria-pressed="false">
									<i class="bi-circle-half me-2"></i>

									{% comment %} <svg class="bi me-2 opacity-50" width="32" height="32"><use href="#circle-half"></use></svg> {% endcomment %}
									Auto
									{% comment %} <svg class="bi d-none"><use href="#check2"></use></svg> {% endcomment %}
								</button>
							</li>
						</ul>
					</div>
				</div>

				{% comment %} {% renderFile "./layouts/partials/search.html" %} {% endcomment %}

				{% comment %} <%- @partial('search.html') %> {% endcomment %}
			</div>
		</div>
	</nav>
</header>
